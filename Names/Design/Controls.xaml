<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Button 样式 -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource Color.Primary}" />
        <Setter Property="Foreground" Value="{DynamicResource Color.Foreground}" />
        <Setter Property="FontFamily" Value="{StaticResource Font.Main}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Normal}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!-- TextBlock 样式（示例） -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource Color.Foreground}" />
        <Setter Property="FontFamily" Value="{StaticResource Font.Main}" />
    </Style>
</ResourceDictionary>