<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Token.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- 语义颜色 -->
    <SolidColorBrush x:Key="Color.Primary" Color="{StaticResource Token.Color.Primary}" />
    <SolidColorBrush x:Key="Color.Background" Color="{StaticResource Token.Color.Gray.100}" />
    <SolidColorBrush x:Key="Color.Foreground" Color="{StaticResource Token.Color.Gray.900}" />

</ResourceDictionary>
