<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<!-- 🎨 色彩 -->
	<Color x:Key="Token.Color.Primary">#3F6FF6</Color>
	<Color x:Key="Token.Color.Primary.Hover">#5A86F9</Color>
	<Color x:Key="Token.Color.Primary.Pressed">#2E5DE4</Color>
	<Color x:Key="Token.Color.Success">#2ECC71</Color>
	<Color x:Key="Token.Color.Danger">#E74C3C</Color>
	<Color x:Key="Token.Color.Warning">#F39C12</Color>

	<!-- 🌫 中性色 -->
	<Color x:Key="Token.Color.Gray.100">#F8F9FA</Color>
	<Color x:Key="Token.Color.Gray.200">#E9ECEF</Color>
	<Color x:Key="Token.Color.Gray.900">#212529</Color>

	<!-- 🔠 字体 -->
	<FontFamily x:Key="Token.Font.Family.Primary">Segoe UI</FontFamily>
	<FontFamily x:Key="Token.Font.Family.Mono">Consolas</FontFamily>

	<!-- 🔡 字号 -->
	<sys:Double x:Key="Token.Font.Size.XS">12</sys:Double>
	<sys:Double x:Key="Token.Font.Size.SM">14</sys:Double>
	<sys:Double x:Key="Token.Font.Size.MD">16</sys:Double>
	<sys:Double x:Key="Token.Font.Size.LG">20</sys:Double>
	<sys:Double x:Key="Token.Font.Size.XL">24</sys:Double>

	<!-- 📏 间距 -->
	<Thickness x:Key="Token.Spacing.XXS">2</Thickness>
	<Thickness x:Key="Token.Spacing.XS">4</Thickness>
	<Thickness x:Key="Token.Spacing.SM">8</Thickness>
	<Thickness x:Key="Token.Spacing.MD">16</Thickness>
	<Thickness x:Key="Token.Spacing.LG">24</Thickness>
	<Thickness x:Key="Token.Spacing.XL">32</Thickness>

	<!-- 🧊 圆角 -->
	<CornerRadius x:Key="Token.Radius.SM">4</CornerRadius>
	<CornerRadius x:Key="Token.Radius.MD">8</CornerRadius>
	<CornerRadius x:Key="Token.Radius.LG">12</CornerRadius>

	<!-- 🧱 边框 -->
	<sys:Double x:Key="Token.Border.Width">1</sys:Double>

</ResourceDictionary>
