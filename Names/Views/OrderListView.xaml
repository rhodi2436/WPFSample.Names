            <ItemsControl.Items>
                <Button Content="查看订单 #101" Margin="2" Command="{Binding NavigateToOrderDetailCommand}" CommandParameter="101"/>
                <Button Content="查看订单 #102" Margin="2" Command="{Binding NavigateToOrderDetailCommand}" CommandParameter="102"/>
