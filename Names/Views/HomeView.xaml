<UserControl x:Class="Names.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Names.Views"
             xmlns:vm="using:Names.ViewModels"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="欢迎来到首页" FontSize="24" Margin="0 0 0 20" />
            <Button Content="查看订单列表" Width="150" Command="{Binding NavigateToOrderListCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
